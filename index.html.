        <button class="nav-tab" onclick="showSection('faq', this)">Preguntas Frecuentes</button>
        <button class="nav-tab" onclick="showSection('protocolo', this)">Protocolo</button>
        <button class="nav-tab" onclick="showSection('guia', this)">Guía de Coordinación</button>
